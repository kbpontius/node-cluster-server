<html>
<head>
  <title>Cluster</title>
  <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.19/angular.min.js"></script>

<script src="/javascripts/angularApp.js"></script>
</head>

<body ng-app="clusterApp" ng-controller="MainCtrl" >
    <form ng-submit="getPIDs()">
      <h3>Test PIDs </h3>
      <button type="submit">TestPIDS</button>
    </form>
    <form ng-submit="getMyPIDs()">
      <h3>Display PIDs </h3>
      <button type="submit">GETPIDS</button>
    </form>
    <form ng-submit="reset()">
      <h3>Reset PID's</h3>
      <button type="submit">Reset</button>
    </form>
		<form ng-submit="startInterval()">
			<h3>Number of Requests:</h3>	
			<p>Ajust the number below and it will respond in real-time.</p>
			<input type="text" ng-model="reqNumber"/>
      <h3>Start Timer</h3>
      <button type="submit">Start</button>
    </form>
    <form ng-submit="stopInterval()">
      <h3>Stop Timer</h3>
      <button type="submit">Stop</button>
    </form>
    <ul>
    <div ng-repeat="node in cluster">
      <li>{{node.pid}}</ul>
    </div>
   </ul>
</body>
</html>